package kmeans;

import java.io.FileNotFoundException;

public class Main {
	
	public final static String DATA_SRC = "data/blog_data_test/";
//	public final static String DATA_SRC = "data/blog_data/";

	public final static boolean REMOVE_STOPWORDS = true;
	public final static int     NUM_TOP_WORDS    = 1000;

	public static void main(String[] args) throws FileNotFoundException {
		
		Dictionary dic = new Dictionary(
				DATA_SRC, 
				REMOVE_STOPWORDS);
		
		// convert documents into vectors
		TfIdfVectorMap vectorMap = new TfIdfVectorMap(
				DATA_SRC, 
				dic,
				REMOVE_STOPWORDS);
		
		Kmeans kmeans = new Kmeans(vectorMap._vectorMap.values().toArray(new DocVector[0]));
		kmeans.run(3,10);
		System.out.print(kmeans.bestClustersToString());
	}

}
